            timeout-ms = <175>;
            layers = <0>;
        };

        combo_h {
            bindings = <&kp H>;
            key-positions = <13 11>;
            timeout-ms = <175>;
            layers = <0>;
        };

        combo_v {
            bindings = <&kp V>;
            key-positions = <2 0>;
            timeout-ms = <175>;
            layers = <0>;
        };

        combo_j {
            bindings = <&kp J>;
