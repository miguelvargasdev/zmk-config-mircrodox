#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/keys.h>

#define BASE 0
#define NAV  1
#define SYM  2
#define NUM  3
#define GAMING 4

/ {
    macros {
    };

    combos {
        compatible = "zmk,combos";

        combo_backspace {
            bindings = <&kp BACKSPACE>;
            key-positions = <13 2>;
            timeout-ms = <175>;
            layers = <>;
        };

        combo_control {
            bindings = <&sk LCTRL>;
            key-positions = <0 13>;
            timeout-ms = <175>;
            layers = <>;
        };

        combo_gui {
            bindings = <&sk LEFT_GUI>;
            key-positions = <0 12>;
            timeout-ms = <175>;
            layers = <>;
        };

        combo_alt {
            bindings = <&sk LEFT_ALT>;
            key-positions = <0 11>;
            timeout-ms = <175>;
            layers = <>;
        };

        combo_enter {
            bindings = <&kp ENTER>;
            key-positions = <3 13>;
            timeout-ms = <175>;
            layers = <>;
        };

        combo_delete {
            bindings = <&kp DELETE>;
            key-positions = <2 11>;
            timeout-ms = <175>;
            layers = <>;
        };

        combo_shift_lock {
            bindings = <&kt LEFT_SHIFT>;
            key-positions = <2 12>;
            timeout-ms = <175>;
        };

        combo_b {
            bindings = <&kp B>;
            key-positions = <13 10>;
            timeout-ms = <175>;
            layers = <0>;
        };

        combo_c {
            bindings = <&kp C>;
            key-positions = <13 12>;
            timeout-ms = <175>;
            layers = <0>;
        };

        combo_n {
